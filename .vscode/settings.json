{
    "git.ignoreLimitWarning": true,
    "editor.fontSize": 20,
    "workbench.editor.wrapTabs": true,
    "workbench.editor.splitInGroupLayout": "vertical",
    "workbench.editor.tabSizing": "fit",
    "workbench.editor.tabSizingFixedMinWidth": 200,
    
    // 自动保存设置
    "files.autoSave": "afterDelay",     // 延迟后自动保存
    "files.autoSaveDelay": 1000,        // 自动保存延迟时间（毫秒）
    "files.autoSaveWorkspaceFilesOnly": false,  // 保存所有文件，不仅仅是工作区文件
    
    // 格式化设置
    "editor.formatOnSave": true,        // 保存时自动格式化
    "editor.formatOnPaste": true,       // 粘贴时自动格式化
    "editor.formatOnType": true,        // 键入时自动格式化
    
    // 其他相关设置
    "files.trimTrailingWhitespace": true,  // 保存时删除行尾空格
    "files.insertFinalNewline": true,      // 文件末尾插入新行
    "files.trimFinalNewlines": true        // 保存时删除多余的最终新行
}